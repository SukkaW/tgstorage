.root
  display: flex
  flex-shrink: 0
  width: 100%
  padding: 0 20px
  cursor: pointer

.icon
  display: flex
  justify-content: center
  align-items: center
  align-self: center
  margin: 0 20px 0 0
  flex-shrink: 0
  width: 40px
  height: 40px
  border-radius: 50%
  border: 2px solid var(--icon-border-color)
  background-color: var(--icon-background-color)

  > svg
    width: 18px
    height: 18px
    fill: var(--color-white)

.content
  flex-shrink: 0
  width: calc(100% - 56px)
  padding: 12px 0
  border-bottom: 1px solid var(--item-border-color)

.title
  width: 100%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 17px

.description
  width: 100%
  margin-top: 2px
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 14px
  color: var(--color-light-2)
