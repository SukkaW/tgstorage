.buttons
  margin-left: auto
  display: flex
  flex-shrink: 0

.button
  width: 40px
  height: 48px
  flex-shrink: 0
  align-self: flex-end

  > svg
    width: 20px
    height: 20px
    fill: var(--color-light-2)

  &._primary > svg
    fill: var(--color-brand)

.loader
  margin: 0 8px 15px
  flex-shrink: 0
  width: 18px
  height: 18px
  align-self: flex-end

.input
  flex-grow: 1
  height: 48px
  max-height: 240px
  padding-right: 6px

.mediaCount
  position: absolute
  left: 0
  bottom: 0
  display: flex
  align-items: flex-end
  height: 48px
  padding: 0 0 14px 16px
  color: var(--color-blue-1)
  line-height: 1

  > svg
    margin-right: 8px
    width: 20px
    height: 20px
    fill: var(--color-blue-1)
