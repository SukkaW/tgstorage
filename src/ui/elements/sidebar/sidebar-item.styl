.root
  display: flex
  width: 100%
  padding: 0 16px
  cursor: pointer

.icon
  display: flex
  justify-content: center
  align-items: center
  align-self: center
  margin: 0 16px 0 0
  flex-shrink: 0
  width: 48px
  height: 48px
  border-radius: 50%
  background-color: var(--color-black-3)

  > svg
    width: 18px
    height: 18px
    fill: var(--color-white)

.content
  flex-shrink: 0
  width: calc(100% - 64px)
  padding: 12px 0
  border-bottom: 1px solid var(--color-black-3)

.title
  width: 100%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 17px

.description
  width: 100%
  padding-top: 2px
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 14px
  color: var(--color-grey-0)
