.root
  display: block
  width: 100%
  height: 100%
  padding: 0 0 36px
  background-color: inherit

  overflow: auto
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: none
  &::-webkit-scrollbar
    display: none

  > div
    background-color: inherit

._disabled
  &::after
    position: absolute
    z-index: 5
    top: 0
    right: 0
    bottom: 0
    left: 0
    display: block
    //background-color: inherit
    //opacity: 0.5
    content: ''
