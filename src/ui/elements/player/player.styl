.video
  width: 100%
  height: auto
  max-width: 100%
  max-height: 100%

  &._hidden
    display: none

  &::-webkit-media-controls
    position: absolute
    z-index: -1
    display: none !important
    opacity: 0

.audio
  display: block
  width: 100%

  &._hidden
    display: none

.description
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 100%
  height: calc(100% - 96px)
  max-width: calc(100% - 96px)
  transition: opacity .3s ease-in-out

  &._transparent
    opacity: 0.05

.descriptionText
  width: 100%
  text-align: center

  &:first-child
    font-size: 16px

  &:last-child
    font-size: 24px

  & + .descriptionText
    margin-top: 8px


.playButton
  position: absolute
  width: 64px
  height: 64px
  border-radius: 50%
  background-color: var(--color-black-05)
  opacity: 1
  transition: opacity .3s ease-in-out

  &._hidden
    opacity: 0
    transition-duration: .2s
    transition-timing-function: ease-in

  &._border
    border: 2px solid var(--color-white)

.controls
  position: absolute
  left: 0
  right: 0
  bottom: 0
  display: flex
  justify-content: space-between
  align-items: center
  width: calc(100% - 54px)
  height: 48px
  opacity: 1
  transition: opacity .3s ease-in-out

  &._disabled
    opacity: 0.1
    pointer-events: none

  &._hidden
    opacity: 0
    pointer-events: none
    transition-duration: .2s
    transition-timing-function: ease-in

  &._padding
    padding-left: 20px

.time
  margin-left: 20px
  flex-shrink: 0
  font-size: 10px
  white-space: nowrap
  font-feature-settings: "tnum"
  font-variant-numeric: tabular-nums
