.root
  position: relative
  top: 0
  right: 18px
  display: flex
  align-items: center

.button
  width: 32px
  height: 32px

  > svg
    fill: var(--color-dark-3)

  &:active
    background-color: var(--color-dark-1)

  &::after
    position: absolute
    width: 100%
    height: 100%
    content: ''
