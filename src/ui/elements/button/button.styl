.root
  display: flex
  justify-content: center
  align-items: center
  flex-shrink: 0
  width: 100%
  height: 44px
  margin: 0
  padding: 0
  border: none
  box-shadow: none
  border-radius: 8px
  color: var(--default-font-color)
  background-color: inherit
  font-family: inherit
  font-weight: normal
  font-size: 16px
  line-height: 1
  cursor: pointer
  user-select: none
  transition: .2s ease-in
  transition-property: background, opacity

  > svg
    flex-shrink: 0
    width: 18px
    height: 18px
    fill: var(--default-font-color)

  &:focus
    outline: none

  &:active
    opacity: .5

&._disabled
  opacity: .5
  cursor: not-allowed

&._brand
  color: var(--color-white)
  background-color: var(--color-brand)

  &:active
    opacity: .75

&._light
  color: var(--color-white)
  background-color: var(--color-dark-4)

  &:active
    opacity: .75

&._uppercase
  text-transform: uppercase
  font-size: 14px
  font-weight: 500
  letter-spacing: 1px

&._round
  width: 36px
  height: 36px
  border-radius: 50%

&._square
  width: 44px
  height: 100%
  border-radius: 0

&._outline
  border: 1px solid var(--default-font-color)

&._inline
  width: auto
  height: auto
  color: var(--color-light-2)
