.root
  position: absolute
  z-index: 6
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  background-color: inherit

.header
  position: relative
  z-index: 1
  display: flex
  align-items: center
  flex-shrink: 0
  padding: 0 20px 0 0
  height: 48px
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.12)
  background-color: var(--sidebar-header-background-color)

.title
  display: block
  margin: 0
  padding: 0
  font-size: 17px
  font-weight: normal
  line-height: 1

.content
  flex-grow: 1
  padding: 0 20px
  background-color: inherit

  overflow: auto
  -webkit-overflow-scrolling: touch
  scroll-behavior: smooth
  scrollbar-width: none
  &::-webkit-scrollbar
    display: none
