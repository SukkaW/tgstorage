.root
  position: relative
  width: 22px
  height: 22px
  border: 2px solid var(--icon-border-color)
  border-left-color: var(--icon-second-border-color)
  border-radius: 50%
  will-change: transform
  animation: rotate 1.1s infinite linear

._brand
  border-top-color: var(--color-brand)
  border-right-color: var(--color-brand)
  border-bottom-color: var(--color-brand)

._grey
  border-left-color: transparent
  border-top-color: var(--menu-icon-color)
  border-right-color: var(--menu-icon-color)
  border-bottom-color: var(--menu-icon-color)

@keyframes rotate
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)
