.root
  height: 100%
  background-color: inherit

  &._scroll
    overflow: auto
    -webkit-overflow-scrolling: touch
    scroll-behavior: smooth
    scrollbar-width: none
    &::-webkit-scrollbar
      display: none

.inner
  display: flex
  width: 100%
  height: 100%
  background-color: inherit

  &._center
    margin: 0 auto
    flex-direction: column
    align-items: center
    width: 300px

  &._wide
    width: 100%

    @media $desktop
      max-width: 980px
