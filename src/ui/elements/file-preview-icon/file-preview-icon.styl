.root
  display: flex
  flex-direction: column
  justify-content: space-between
  align-items: center
  width: 100%
  height: 100%
  padding: 8px 0 6px
  border-radius: 8px
  background-color: var(--color-dark-4)
  color: var(--color-white)
  font-size: 12px
  text-transform: lowercase

  > svg
    fill: var(--color-white)
