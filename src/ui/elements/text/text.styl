.root
  display: flex
  align-items: center
  flex-shrink: 0
  margin: 0
  padding: 0
  white-space: pre-line

  > a
    text-decoration: none
    color: var(--content-link-color)

  > svg
    margin-left: 8px
    width: 20px
    height: 20px
    fill: var(--color-light-2)
    cursor: pointer

._withLink
  display: inline-block
  width: 100%

._large
  font-size: 18px

._small
  font-size: 14px

._bold
  font-weight: 500

._center
  justify-content: center
  text-align: center

._grey
  color: var(--color-light-2)

._uppercase
  text-transform: uppercase
  word-spacing: 4px

._ellipsis
  display: block
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

._capitalize
  text-transform: capitalize
