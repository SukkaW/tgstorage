.root
  position: relative
  margin-bottom: 16px
  display: flex
  width: 100%
  height: 64px
  //border-bottom: 1px solid var(--item-border-color)
  //border-radius: 8px 0 0 8px
  background-color: inherit

.preview
  flex-shrink: 0
  position: relative
  width: 64px
  height: 100%
  border-radius: 8px
  overflow: hidden

  > canvas
  > img
  > div
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    border-radius: 8px

  > canvas
    &:not(:last-child)
      display: none

  > img
    object-fit: cover

.description
  display: flex
  flex-direction: column
  justify-content: space-around
  width: calc(100% - 64px)
  padding-left: 16px

.title
  width: calc(100% - 32px)

.footer
  display: flex
  width: calc(100% - 16px)

  > span
    font-size: 12px

    &:last-child:not(:first-child)
      margin-left: auto
      color: var(--default-font-color)

.loader
  position: absolute
  top: 8px
  right: 8px
  width: 16px
  height: 16px

.menu
  top: 0
  right: -8px
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0

.cancelButton
  position: absolute
  top: 0
  right: 0
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0

._compact
  width: calc(50% - 8px)

  &:nth-child(even)
    margin-left: 16px

  .menu
    height: 32px

  @media screen and (max-width: 379px), screen and (min-width: 641px) and (max-width: 699px)
    .description
      width: calc(100% - 52px)
      padding-left: 12px

    .title
      visibility: hidden

    .footer > span
      font-size: 9px

      &:first-child:not(:last-child)
        display: none
