.root
  display: flex
  width: 100%
  height: 44px
  border-radius: 8px
  font-size: 14px

.option
  display: flex
  justify-content: center
  align-items: center
  flex-shrink: 0
  flex-grow: 1
  max-width: 51%
  height: 100%
  padding: 0 12px
  color: var(--color-light-2)
  border: 1px solid var(--color-light-2)
  border-left-color: transparent
  border-right-color: transparent
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  cursor: pointer
  transition: .2s ease-in
  transition-property: color, border-color

  &:first-child
    border-radius: 8px 0 0 8px
    border-left-color: var(--color-light-2)

  &:last-child
    border-radius: 0 8px 8px 0
    border-right-color: var(--color-light-2)

  &._active
    color: var(--default-font-color)
    border-color: var(--default-font-color)
    border-width: 1px
    cursor: default

.input
  position: absolute
  z-index: -1
  width: 0
  height: 0
  overflow: hidden
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
