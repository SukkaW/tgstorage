.root
  position: relative
  margin-bottom: 16px
  display: flex
  width: 100%
  height: 64px
  flex-shrink: 0
  //border-bottom: 1px solid var(--item-border-color)
  //border-radius: 8px 0 0 8px
  background-color: inherit

.preview
  flex-shrink: 0
  position: relative
  width: 64px
  height: 100%
  border-radius: 8px
  overflow: hidden

  > canvas
  > img
  > div
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    width: 64px
    height: 64px
    border-radius: 8px

  > canvas
    &:not(:last-child)
      display: none

  > img
    object-fit: cover

  &._disabled
    pointer-events: none
    cursor: default

.description
  display: flex
  flex-direction: column
  justify-content: space-around
  width: calc(100% - 64px)
  padding-left: 16px
  font-weight: var(--font-weight-content)

.title
  width: calc(100% - 32px)

.footer
  display: flex
  width: calc(100% - 16px)

  > span
    font-size: 12px

.loader
  position: absolute
  top: 8px
  right: 8px
  width: 16px
  height: 16px

.menu
  top: 0
  right: -8px
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0

._single
  margin-bottom: 0
