.root
  margin-right: -8px
  display: flex
  align-items: center

  @media $desktop
    margin-right: -8px

.icon
  margin-right: 4px
  display: flex
  align-items: center
  justify-content: center
  width: 40px
  height: 40px
  border-radius: 50%
  background-color: var(--color-blue)

  > svg
    width: 24px
    height: 24px
    fill: var(--color-white)

  @media $desktop
    margin-right: 8px
    width: 48px
    height: 48px

    > svg
      width: 28px
      height: 28px

.text
  position: relative
  margin: 0
  padding: 0
  flex-shrink: 0
  color: transparent
  text-transform: uppercase
  font-weight: 400
  line-height: 1
  font-size: 24px
  letter-spacing: 4px

  &::before
  &::after
    position: absolute
    top: 0

  &::before
    left: 0
    color: var(--color-blue)
    content: 'Tg'

  &::after
    right: 0
    color: var(--default-font-color)
    content: 'Storage'

  @media $desktop
    font-size: 32px
    letter-spacing: 8px
