.root
  position: relative
  z-index: 6
  display: flex
  align-items: center
  flex-shrink: 0
  padding: 0 20px
  height: 48px
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.12)
  background-color: var(--sidebar-header-background-color)

  &::before
    position: absolute
    z-index 0
    top: 16px
    right: 12px
    display: block
    width: 64px
    height: 64px
    border-radius: 50%
    background-color: var(--sidebar-background-color)
    box-shadow: inset 0 0 2px 1px rgba(0, 0, 0, 0.12)
    content: ''

  &::after
    position: absolute
    z-index 0
    top: 49px
    right: 12px
    width: 64px
    height: 32px
    background-color: var(--sidebar-background-color)
    content: ''

  > button
    position: relative
    margin-left: 4px

    &::after
      position: absolute
      top: -8px
      bottom: -8px
      width: 100%
      content: ''

    &:first-of-type
      margin-left: 12px

  @media $desktop
    position: sticky
    position: -webkit-sticky
    top: 0

    &::after
      border-radius: 0 0 64px 64px
