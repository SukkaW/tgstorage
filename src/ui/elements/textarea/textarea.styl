.root
  padding: 14px 0

.textarea
  display: block
  width: 100%
  height: 100%
  min-height: 22px
  margin: 0
  padding: 0
  border: none
  background-color: inherit
  box-shadow: none
  font-family: inherit
  font-size: 16px
  line-height: 22px
  color: var(--default-font-color)
  appearance: none
  outline: none
  resize: none

  overflow: auto
  -webkit-overflow-scrolling: touch
  scrollbar-width: none
  &::-webkit-scrollbar
    display: none
