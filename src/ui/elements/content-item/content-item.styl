.root
  position: absolute
  flex-shrink: 0
  width: $content-width
  max-width: calc(100% - 32px)
  padding: 20px 0
  will-change: bottom

  &._hidden
    display: none

  @media screen and (min-width: $sidebar-width + $content-width + 40px)
    max-width: calc(100% - 40px)

.content
  position: relative
  width: 100%
  padding: 0 16px
  background-color: var(--content-item-background-color)
  border-radius: 8px

.header
  display: flex
  align-items: center
  width: calc(100% - 16px)
  height: 32px
  font-size: 12px
  border-bottom: 1px solid var(--item-border-color)
  color: var(--color-light-2)

.text
  padding: 12px 0 16px
  white-space: pre-line

.loader
  position: absolute
  top: 8px
  right: 8px
  width: 16px
  height: 16px

.menu
  top: 0
  right: 0
  width: 32px
  height: 32px
  border-radius: 0 8px 0 0
