.root
  position: relative
  display: flex
  flex-shrink: 0
  width: 100%
  padding: 0 20px
  cursor: pointer
  background-color: inherit
  opacity: 1
  transition: opacity .2s ease-in

.icon
  display: flex
  justify-content: center
  align-items: center
  align-self: center
  margin: 0 20px 0 0
  flex-shrink: 0
  width: 40px
  height: 40px
  border-radius: 50%
  border: 2px solid var(--icon-border-color)
  background-color: var(--icon-background-color)

  > svg
    width: 18px
    height: 18px
    fill: var(--color-white)

.content
  flex-shrink: 0
  width: calc(100% - 60px)
  padding: 12px 0
  border-bottom: 1px solid var(--item-border-color)

.title
  width: calc(100% - 20px)
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 17px

.description
  width: calc(100% - 20px)
  margin-top: 2px
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 14px
  color: var(--color-light-2)

.menu
  top: 0
  right: 0
  width: 42px
  height: 64px

._disabled
  pointer-events: none
  cursor: default
  opacity: .5
