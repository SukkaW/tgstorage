.root
  position: relative
  display: flex
  flex-shrink: 0
  padding: 8px 0 8px 20px
  background-color: inherit
  opacity: 1
  //will-change: opacity
  transition: opacity .2s ease-in

  &:not(:nth-child(3))
    margin-top: 20px

.title
  flex-shrink: 0
  display: block
  margin: 0
  padding: 0
  width: calc(100% - 48px)
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-size: 22px
  font-weight: 700

.menu
  top: 0
  right: 0
  width: 52px
  height: 42px

._disabled
  pointer-events: none
  cursor: default
  opacity: .5
