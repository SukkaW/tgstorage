.root
  position: relative
  flex-shrink: 0
  width: $content-width + 40px
  max-width: 100%

  @media $desktop
    max-width: calc(100% - 40px)

.form
  height: 48px
  max-height: 240px
  background-color: var(--content-form-background-color)
  border-radius: 8px 8px 0 0
  box-shadow: 0 -1px 2px 0 rgba(0, 0, 0, 0.12)

.button
  width: 48px
  height: 48px
  flex-shrink: 0
  align-self: flex-end

  > svg
    width: 22px
    height: 22px
    fill: var(--color-dark-4)

.textarea
  flex-grow: 1
